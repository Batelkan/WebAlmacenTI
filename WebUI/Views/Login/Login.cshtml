@model WebUI.Models.WebAdminUser

@{
    Layout = "~/Views/_LoginLayout.cshtml";
}

<div class="container vertical-center">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {<form class="form-horizontal formLogin " id="bootstrap-overrides-focus bootstrap-overrides-Input">
            <h2 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:#E0E0E0">Almacen</h2>
            <br />
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Correo, new { @class = "form-control", id = "inputEmail3", placeholder = "Email", type = "email" })
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.contraseña, new { @class = "form-control", id = "inputPassword3", placeholder = "Password", type = "password" })
                </div>
            </div>
             <br />
            <br />
            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">acceder</button>
                </div>
            </div>
            <br />
            <br />
         @if (TempData["message"] != null)
         {
             <div class="alert alert-warning" role="alert" style="font-size:14px;height:30px;padding: 6px 0px 0px 4px">@TempData["message"]</div>
         }
        </form>
       
    }
    
</div>